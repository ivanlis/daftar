<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
                name="lessonDetailsViewModel"
                type="bilbao.ivanlis.kobeta.LessonDetailsViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent"
                                                       tools:context="LessonDetailsFragment">

        <!-- TODO: Update blank fragment layout -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lessonNameText"
                android:text="xxx"
                tools:text="Lesson Name" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/initialFormsList"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/button_edit_description" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:id="@+id/initialFormsList"/>
        <Button
                android:text="@string/new_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_new" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/initialFormsList" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <Button
                android:text="@string/edit_lesson_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_edit_description" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:onClick="@{() -> lessonDetailsViewModel.onNavigateToLessonDescription()}"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>